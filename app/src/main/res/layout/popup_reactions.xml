<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fill_reactions"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_8">

    <LinearLayout
        android:id="@+id/layout_reaction_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reaction1"
            style="@style/EmojiTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/emoji_fearfull"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/reaction1_count"
            style="@style/MainTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="12sp"
            tools:text="0" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_reaction_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reaction2"
            style="@style/EmojiTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/emoji_hands"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/reaction2_count"
            style="@style/MainTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="12sp"
            tools:text="0" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_reaction_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reaction3"
            style="@style/EmojiTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/emoji_angry"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/reaction3_count"
            style="@style/MainTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="12sp"
            tools:text="0" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_reaction_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reaction4"
            style="@style/EmojiTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/emoji_heart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/reaction4_count"
            style="@style/MainTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="12sp"
            tools:text="0" />

    </LinearLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/dimen_8"
        android:background="@drawable/ripple_transparent_10"
        android:clickable="true"
        android:contentDescription="@string/close"
        android:focusable="true"
        android:padding="4dp"
        android:src="@drawable/ic_close" />

</LinearLayout>